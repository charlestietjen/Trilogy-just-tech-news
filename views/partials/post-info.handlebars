<article class="post">
    <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
        <span>({{post.post_url}})</span>
    </div>
    <div class="meta">
        {{vote_count}} {{format_plural 'point' vote_count}} {{username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural 'comment' comments.length}}</a>
    </div>
</article>